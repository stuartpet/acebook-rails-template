<h2>Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class='login-form-container'>
  <div class="form-inputs form-container">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email", class: "form-control" }
                 %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" , class: "form-control"} %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>
  </div>

  <div class="form-actions Login-submit">
    <%= f.button :submit, "Log in", class: "btn btn-primary submit-login" %>
  </div>
<% end %>

<div class="shared-stuff">
  <%= render "devise/shared/links" %>
</div>
